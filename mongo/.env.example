# MongoDB Environment Configuration
# Copy this file to .env and update the values

# Root credentials (for admin access)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Application database credentials
MONGO_APP_USERNAME=orcatrack_app
MONGO_APP_PASSWORD=CHANGE_THIS_APP_PASSWORD
MONGO_APP_DATABASE=orcatrack

# Backup user credentials
MONGO_BACKUP_USERNAME=backup_user
MONGO_BACKUP_PASSWORD=CHANGE_THIS_BACKUP_PASSWORD

# Monitoring user credentials
MONGO_MONITORING_USERNAME=monitoring_user
MONGO_MONITORING_PASSWORD=CHANGE_THIS_MONITORING_PASSWORD

# Mongo Express (Admin UI) - Only for development/staging
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=CHANGE_THIS_ADMIN_UI_PASSWORD

# Performance tuning
WIREDTIGER_CACHE_SIZE_GB=1.5
MAX_CONNECTIONS=1000

# Network
MONGO_PORT=27017
MONGO_BIND_IP=127.0.0.1

# Backup settings
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"
